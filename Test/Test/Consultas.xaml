<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Test.Consultas">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="OMB Virtual"
                    Style="{ StaticResource blueLabel}"
                    HorizontalOptions= "Fill"
                   HorizontalTextAlignment="Center"/>
            <Label Text="Cliente Nº: 3456"
                   x:Name="CardNumber"
                    Style="{ StaticResource blueLabel}"
                    FontSize="Large"
                    HorizontalOptions= "Fill"
                   HorizontalTextAlignment="Start"/>
            <Button Text="Marcar Consulta"
                    Style="{StaticResource lightBlueButton}"
                    Clicked="Marcar_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>