<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Test.Cartão">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="balanceLabel" TargetType="Label">
                <Setter Property="FontSize" Value="Large"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
            </Style>
        </ResourceDictionary>
    
    </ContentPage.Resources>

    <ContentPage.Content>
        <AbsoluteLayout>
            <Label Text="O seu saldo:"/>
            <Label   x:Name="cardBalance"
                     Text="Saldo" 
                     Style="{StaticResource balanceLabel}"
                     HorizontalOptions="End"
                     AbsoluteLayout.LayoutBounds="0,.1,.5,.1" AbsoluteLayout.LayoutFlags="All"
                     />
            <Button Text="Vales aderente"
                     Style="{StaticResource indexButton}"
                     HorizontalOptions="Start"
                    AbsoluteLayout.LayoutBounds="0,.3,.5,.1" AbsoluteLayout.LayoutFlags="All"/>
            <Button Text="Oferta"
                     Style="{StaticResource indexButton}"
                     HorizontalOptions="Start"
                    AbsoluteLayout.LayoutBounds="0,.6,.5,.1" AbsoluteLayout.LayoutFlags="All"/>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>