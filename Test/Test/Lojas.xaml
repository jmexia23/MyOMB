<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Test.Lojas">
    <ContentPage.Content>
        <AbsoluteLayout>
            <Button Text="Lojas"
                     Style="{StaticResource indexButton}"
                     HorizontalOptions="Start"
                    AbsoluteLayout.LayoutBounds="0,.3,.5,.1" AbsoluteLayout.LayoutFlags="All"
                    Clicked="LojasIndice_Clicked"/>
            <Button Text="Serviços/Produtos"
                     Style="{StaticResource indexButton}"
                     HorizontalOptions="Start"
                    AbsoluteLayout.LayoutBounds="0,.6,.5,.1" AbsoluteLayout.LayoutFlags="All"/>
            <Button Text="Vantagens OMB"
                    Clicked="Vantagens_Clicked"
                     Style="{StaticResource indexButton}"
                     HorizontalOptions="End"
                    AbsoluteLayout.LayoutBounds="1,.3,.5,.1" AbsoluteLayout.LayoutFlags="All"/>
            <Button Text="Parceiros OMB"
                     Style="{StaticResource indexButton}"
                     HorizontalOptions="End"
                    AbsoluteLayout.LayoutBounds="1,.6,.5,.1" AbsoluteLayout.LayoutFlags="All"/>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>