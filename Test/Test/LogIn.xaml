<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Test.LogIn">

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Username"/>
            <Entry x:Name="usernameEntry" Placeholder="Insira o seu nº de telemóvel"/>
            <Label Text="Password"/>
            <Entry x:Name="Password" Placeholder="Insira o seu nº de cliente" IsPassword="True"/>
            <Button Text="Login" Clicked="OnLoginClicked" Style="{StaticResource blueButton}" Margin="100"/>
            <Label x:Name="messageLabel"/>
            <Button Text="Sign Up" Clicked="OnSignUpClicked" Style="{StaticResource lightBlueButton}" Margin="100"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>