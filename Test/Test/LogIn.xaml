<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Test.LogIn">

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Iniciar sesão na sua conta My OMB"
                   HorizontalTextAlignment="Center"
                   Style="{ StaticResource blueLabel}"
                   FontSize="Large"
                   HorizontalOptions= "Fill"/>
            <Label Text="Email"/>
            <Entry x:Name="usernameEntry" Placeholder="Insira o seu email"/>
            <Label Text="Palavra-passe"/>
            <Entry x:Name="Password" Placeholder="Insira a sua palavra-passe" IsPassword="True"/>
            <Label x:Name="messageLabel"/>
            <Button Text="Iniciar Sessão" 
                    Clicked="LogIn_Clicked" 
                    Style="{StaticResource blueButton}"/>
            <Button Text="Não tem conta no My OMB?"
                    Clicked="SignUp_Clicked" 
                    Style="{StaticResource lightBlueButton}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>