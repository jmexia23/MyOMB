<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Test.EditarPerfil">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="As suas informações"
                   HorizontalTextAlignment="Center"
                   Style="{ StaticResource blueLabel}"
                   FontSize="Large"
                   HorizontalOptions= "Fill"/>
            <Label Text="Email" />
            <Entry x:Name="EmailEdit" Placeholder="Editar email"/>
            <Label Text="Plavra-passe" />
            <Entry x:Name="PasswordEdit" Placeholder="Editar palavra-passe"/>
            <Label Text="Nome"/>
            <Entry x:Name="NameEdit" Placeholder="Editar nome"/>
            <Label Text="Nº telemóvel"/>
            <Entry x:Name="PhoneEdit" Placeholder="Editar nº de telemóvel"/>
            <Label Text="Nº Cliente OMB"/>
            <Entry x:Name="ClientEdit" Placeholder="Editar nº de cliente OMB"/>
            <Label Text="Nº Cartão OMB"/>
            <Entry x:Name="CardEdit" Placeholder="Editar nº de cartão OMB"/>
            <Button Text="Alterar" Clicked="Alterar_Clicked" Style="{StaticResource blueButton}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>