<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Test.Parceiros">
    <ContentPage.Content>
        <StackLayout 
         BackgroundColor="LightSkyBlue">
        <Label Text="Vantagens Parceiros" 
                   HorizontalOptions="Center"
                   TextColor="White"/>
            <ListView x:Name="listP" ItemSelected="OnItemSelected">
            <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Nome}"
                                  TextColor="White"
                                  Detail="{Binding Descrição}"
                                   DetailColor="White"/>
                    </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>